pkgname=labyrus-git
pkgver=20130314
pkgrel=1
pkgdesk="Qt Game written with OpenGL"
arch=('i686' 'x86_64')
license=('LGPL')
depends=('qt5-base')
makedepends=('git')

_gitroot="https://git.gitorious.org/labyrus/labyrus.git"
_gitname="labyrus"

build() {
  cd $srcdir
  rm -rf ./*
  msg "Conencting to the GIT server..."
  git clone $_gitroot

  msg "GIT checkout done"
  msg "Starting make"
  if [[ -d ${srcdir}/build ]]; then
    msg "Cleaning previous build directory..."
    rm -rf ${srcdir}/build
  fi

  cp -r $srcdir/$_gitname ${srcdir}/build
  cd ${srcdir}/build

  cd Client

  echo "Disabling portable version"
  
  cat Client.pro | grep -v PORTABLE > Client1.pro
  mv Client1.pro Client.pro

  cd ../SinglePlayer

  cat SinglePlayer.pro | grep -v PORTABLE > SinglePlayer1.pro
  mv SinglePlayer1.pro SinglePlayer.pro

  echo "disabled"

  cd ../Client
  qmake -makefile
  make
  lrelease -compress ru_RU.tr
  cd ../Server
  qmake -makefile
  make
  cd ../SinglePlayer
  qmake -makefile
  make
}

package() {
  cd ${srcdir}/build
  mkdir -p ../../pkg/usr/bin
  mkdir -p ../../pkg/usr/share/labyrus
  mkdir -p ../../pkg/usr/share/labyrus/translations/
  cp -rf Server/Server ../../pkg/usr/bin/labyrus-server
  cp -rf Client/Client ../../pkg/usr/bin/labyrus-client
  cp -rf Client/ru_RU.qm ../../pkg/usr/bin/labyrus/translations/labyrus-ru_RU.qm
  cp -rf SinglePlayer/SinglePlayer ../../pkg/usr/bin/labyrus-singleplayer
  cp -rf skins ../../pkg/usr/share/labyrus/
}
